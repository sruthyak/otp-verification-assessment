@{
    ViewData["Title"] = "OTP Verification";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>OTP Verification</h4>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="control-label">Full Name<span class="text-danger">*</span></label>
                        <input class="form-control" id="txtFullName" />
                        <div id="errorFullName" class="text-danger small"></div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Email<span class="text-danger">*</span></label>
                        <input class="form-control" id="txtEmail" />
                        <div id="errorEmail" class="text-danger small"></div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Country Code<span class="text-danger">*</span></label>
                        <input class="form-control" id="txtCountryCode" />
                        <div id="errorCountryCode" class="text-danger small"></div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Phone Number<span class="text-danger">*</span></label>
                        <input class="form-control" id="txtPhNo" />
                        <div id="errorPhone" class="text-danger small"></div>
                    </div>
                    <div class="form-group mb-3 d-flex align-items-center gap-2">
                        <button type="button" class="btn btn-primary w-100 d-flex justify-content-center align-items-center" id="btnGenerateOtp">
                            <span id="btnText">Generate OTP</span>
                            <span id="otpLoading" class="ms-2" style="display:none;">
                                <i class="fas fa-spinner fa-spin"></i>
                            </span>
                        </button>
                    </div>

                    <div id="otpVerificationSection" style="display: none;">
                        <div class="form-group mb-3">
                            <label class="control-label">Enter OTP<span class="text-danger">*</span></label>
                            <input class="form-control" id="txtGeneratedOtp" />
                        </div>
                        <div class="form-group mb-3">
                            <input type="button" value="Verify OTP" class="btn btn-success w-100" id="btnVerifyOtp" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="otpModal" tabindex="-1" aria-labelledby="otpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="otpModalLabel">OTP Notification</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center fs-6" id="otpModalBody">
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.7.1.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
